package com.example.sacs.ecosystem;

import android.content.Context;
import android.os.Bundle;
import android.text.Editable;
import android.text.TextWatcher;
import android.util.Log;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.EditText;
import android.widget.TextView;
/**
 * Created by 1004274 on 1/21/2016.
 */
public class AnimalsFragment extends DataFragment {
    private static final String TAG = "AnimalFragment";
    private Animal mAnimal;

    @Override
    public View onCreateView(LayoutInflater inflater, ViewGroup container,
                             Bundle savedInstanceState) {
        super.onCreateView(inflater, container, savedInstanceState);
        View rootView = inflater.inflate(R.layout.fragment_animal, container, false);

        mAnimal = (Animal)Family.get().getFamily().get(getActivity().getIntent().getIntExtra(FamilyMember.EXTRA_INDEX, 0));//new Animal();

        mAnimal = (TextView)rootView.findViewById(R.id.Animal);
        mEnterAnimal = (EditText)rootView.findViewById(R.id.enter_Animal);
       
        mAnimal.setText(mAnimal.getAnimal());

        AniamlTextChanger animalTextChanger = new AnimalChanger();

        mEnterAnimal.addTextChangedListener(animalTextChanger);
      
        return rootView;
    }

    private class AnimalTextChanger implements TextWatcher {
        @Override
        public void beforeTextChanged(CharSequence s, int start, int count, int after) {

        }

        @Override
        public void onTextChanged(CharSequence s, int start, int before, int count) {
            mAnimal.setAnimal(s.toString());
        }

        @Override
        public void afterTextChanged(Editable s) {
            mAnimal.setText(mAnimal.getAnimal());
        }
    }

    @Override
    public void onPause() {
        super.onPause();
        Log.d(TAG, "Fragment paused.");
    }

    @Override
    public void onResume() {
        super.onResume();
        Log.d(TAG, "Fragment resumed.");
    }
}
